    echo -e "${GREEN}Checking for 2026 updates...${NC}"
    bash <(curl -s https://raw.githubusercontent.com/nobita329/The-Coding-Hub/main/srv/2026/updater.sh 2>/dev/null) || echo -e "${YELLOW}Update system coming soon${NC}"
    pause
    ;;
