#!/bin/bash
# ===========================================================
# CODING HUB Terminal Control Panel - 2026 Edition
# Mode By - Nobita
# ===========================================================

# --- COLORS 2026 ---
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
BLUE='\033[1;34m'
PURPLE='\033[1;35m'
WHITE='\033[1;37m'
ORANGE='\033[1;38;5;208m'
PINK='\033[1;38;5;213m'
TEAL='\033[1;38;5;51m'
NC='\033[0m'

# --- ANIMATION EFFECTS ---
blink='\033[5m'
bold='\033[1m'
underline='\033[4m'

pause(){ 
    echo -e "${TEAL}"; 
    echo -e "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo -e "â•‘                                        â•‘"
    echo -e "â•‘   Press ${underline}Enter${NC}${TEAL} to continue...         â•‘"
    echo -e "â•‘                                        â•‘"
    echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    read -p "" x; 
    echo -e "${NC}"; 
}

