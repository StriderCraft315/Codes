    echo -e "${TEAL}â•‘  ${ORANGE}â•‘              ğŸŒ CHOOSE YOUR INTERFACE DIMENSION ğŸŒ                         â•‘${NC}${TEAL}â•‘${NC}"
    echo -e "${TEAL}â•‘  ${ORANGE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}${TEAL}â•‘${NC}"
    echo -e "${TEAL}â•‘                                                                                        â•‘${NC}"
