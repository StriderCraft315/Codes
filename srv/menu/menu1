    echo "â•‘  Â© 2026 CODING HUB - All Systems Go                                                   â•‘"
    echo "â•‘                                                                                        â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${NC}"
    pause
    ;;
*)
    # Check if input is a number for backward compatibility
    if [[ "$c2026" =~ ^[0-9]+$ ]]; then
        echo -e "${RED}Invalid option! Please choose 0-9 or type 'help'${NC}"
