    echo -e "${GREEN}Switching to 2026 Mode...${NC}"
    echo -e "${CYAN}Welcome to the future!${NC}"
    sleep 2
    main_menu_2026
    ;;
9) echo -e "${GREEN}Exiting â€” CODING HUB by Nobita${NC}"; exit ;;
*) echo -e "${RED}Invalid${NC}"; pause ;;
esac
done
}

